{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["prettier", "airbnb"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "linebreak-style": 0,
        "no-bitwise": 0,
        "function-paren-newline": 0,
        "prefer-destructuring": 0,
        "no-console": 0,
        "no-param-reassign": 0,
        "global-require": 0,
        "dot-notation": 0,
        "no-plusplus": 0,
        "no-restricted-globals": 0,
        "no-else-return": 0,
        "no-await-in-loop": 0,
        "no-extra-boolean-cast": 0,
        "no-cond-assign": 0,
        "no-unneeded-ternary": 0,
        "no-underscore-dangle": 0,
        "no-mixed-operators": 0,
        "no-return-assign": 0,
        "no-lonely-if": 0,
        "import/no-extraneous-dependencies": 0
    }
}